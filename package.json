{
  "name": "playwright-automation-hub",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@11.8.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "turbo run test",
    "test:ui": "turbo run test --filter=ui-tests",
    "test:api": "turbo run test --filter=api-tests",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "latest",
    "@playwright/test": "^1.57.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1",
    "@types/node": "^25.0.3"
  }
}
